<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebFragment"
    android:background="@color/bg_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardCornerRadius="20dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/release_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:fontFamily="@font/strait_normal"
                        android:textSize="30dp"
                        android:text="Artist Profile"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/acloudyskye_ic"
                        android:layout_gravity="center"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="acloudyskye"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/strait_normal"
                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="#acloudyskye"
                        android:textSize="20dp"
                        android:textColor="@color/bg_grey"
                        android:gravity="center"
                        android:fontFamily="@font/strait_normal"

                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="@drawable/cust_btngreyrounded1"
                        android:text="Follow"
                        android:layout_gravity="center"
                        android:fontFamily="@font/strait_normal">

                    </androidx.appcompat.widget.AppCompatButton>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:src="@drawable/acloudy2"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:padding="10dp"
                        android:foregroundGravity="">

                    </ImageView>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="acloudyskye"
                        android:textSize="30dp"
                        android:gravity="bottom"
                        android:fontFamily="@font/strait_normal"

                        android:paddingLeft="10dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Curses"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:fontFamily="@font/strait_normal"

                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:src="@drawable/acloudy3"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:padding="10dp"
                        android:foregroundGravity="">

                    </ImageView>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="acloudyskye"
                        android:textSize="30dp"
                        android:gravity="bottom"
                        android:fontFamily="@font/strait_normal"

                        android:paddingLeft="10dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Skull Eater"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:fontFamily="@font/strait_normal"

                        android:paddingLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>