<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/background" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/strait_normal"
                android:textSize="15dp"
                android:paddingLeft="10dp">

            </TextView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"></Space>

            <EditText
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:background="@drawable/cust_edittextround1"
                android:fontFamily="@font/strait_normal"

                android:hint=""
                android:paddingLeft="10dp"
                android:textColorHint="@color/black">

            </EditText>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"></Space>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/strait_normal"
                android:textSize="15dp"
                android:paddingLeft="10dp">

            </TextView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">
            </Space>

            <EditText
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:background="@drawable/cust_edittextround1"
                android:fontFamily="@font/strait_normal"

                android:hint=""
                android:paddingLeft="10dp"
                android:textColorHint="@color/black">

            </EditText>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">
            </Space>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="@font/strait_normal"
                android:textSize="15dp"
                android:paddingLeft="10dp">

            </TextView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">
            </Space>
            <EditText
                android:id="@+id/reg_password"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:background="@drawable/cust_edittextround1"
                android:fontFamily="@font/strait_normal"
                android:inputType="textPassword"
                android:hint=""
                android:paddingLeft="10dp"
                android:textColorHint="@color/black">
            </EditText>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserType"
                android:fontFamily="@font/strait_normal"
                android:textSize="15dp"
                android:paddingLeft="10dp">

            </TextView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>


            <Spinner
                android:id="@+id/user_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:background="@drawable/cust_edittextround1"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">
            </Space>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Gender :"
                        android:fontFamily="@font/strait_normal">

                    </TextView>
                   <com.google.android.material.radiobutton.MaterialRadioButton
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/strait_normal"
                       android:text="Male">

                   </com.google.android.material.radiobutton.MaterialRadioButton>
                   <com.google.android.material.radiobutton.MaterialRadioButton
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/strait_normal"
                       android:text="Female">

                   </com.google.android.material.radiobutton.MaterialRadioButton>
               </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">
            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reg_signup"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="Register"
                android:fontFamily="@font/strait_normal"
                android:textColor="@color/white"
                android:background="@drawable/cust_btnblue1">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>